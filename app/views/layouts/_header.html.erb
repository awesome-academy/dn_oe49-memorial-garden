<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("base_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.title"), root_path %></li>
        <li><%= link_to t("memorial.title"), "#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= User.model_name.human %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login.title"), login_path %></li>
        <% end %>
        <%= link_to t("lang.vi"), {locale: :vi} %>
        <%= link_to t("lang.en"), {locale: :en} %>
      </ul>
    </nav>
  </div>
</header>

