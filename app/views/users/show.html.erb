<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= avatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <% if authorize_delete @user %>
      <%= link_to t("delete.title"), @user, method: :delete,
                  data: {confirm: t("delete.confirm")} %>
    <% end %>
  </aside>
</div>
