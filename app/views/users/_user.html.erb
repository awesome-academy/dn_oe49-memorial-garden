<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= avatar_for user %>
        <%= link_to user.name, user %>
      </h1>
      <% if params[:action].eql? "privacy_settings" %>
        <%= link_to t("memorial.privacy.delete"), user.memorial_relations
          .find_by(memorial_id: @memorial.id), method: :delete, remote: true,
          data: {confirm: t("delete.confirm")} %>
      <% end %>
    </section>
  </aside>
</div>
