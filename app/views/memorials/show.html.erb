<% provide :title, t("memorial.profile") %>
<%= content_tag( :h1, t("memorial.show.title",
  name: @memorial.name), class: "phrase") %>
<h1 class="about"><%= t("memorial.show.life") %></h1>
<div class="row">
  <aside>
    <section class="user_info">
      <h1>
       <span>
        <%= t("placetime.born_on") %>
        <%= show_date_of @memorial, :birth %>
        <%= t "placetime.at" %>
        <%= @memorial.place :birth %>
       </span>
       <span>
        <%= t("placetime.die_on") %>
        <%= show_date_of @memorial, :death %>
        <%= t "placetime.at" %>
        <%= @memorial.place :death %>
       </span>
      </h1>
    </section>
  </aside>
</div>
<h1 class="tribute-title"><%= t "memorial.show.tribute" %></h1>
<div id="tribute_form">
  <%= render (logged_in?  ? "shared/user_tribute" : "shared/tribute_signup") %>
</div>
<ol class="memorials", id="tributes">
  <%= render @tributes %>
</ol>
<div id="paginator">
<%= paginate @tributes, remote: true  %>
</div>
